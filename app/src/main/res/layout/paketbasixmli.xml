<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	android:background="#3D3D3D"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="Paket Başı"
			android:background="#171717"
			android:textSize="36sp"
			android:textColor="#FE5C51"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#2E2E2E">

		<Button
			android:id="@+id/paketbasixmliButtonPaket1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#E100FF"
			android:textColor="#D9D9D9"
			android:layout_margin="5dp"
			android:layout_weight=".16"
			android:text="1"/>

		<Button
			android:id="@+id/paketbasixmliButtonPaket2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#E100FF"
			android:textColor="#D9D9D9"
			android:layout_margin="5dp"
			android:layout_weight=".16"
			android:text="2"/>

		<Button
			android:id="@+id/paketbasixmliButtonPaket3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#E100FF"
			android:textColor="#D9D9D9"
			android:layout_margin="5dp"
			android:layout_weight=".16"
			android:text="3"/>

		<Button
			android:id="@+id/paketbasixmliButtonPaket4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#E100FF"
			android:textColor="#D9D9D9"
			android:layout_margin="5dp"
			android:layout_weight=".16"
			android:text="4"/>

		<Button
			android:id="@+id/paketbasixmliButtonPaket5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#E100FF"
			android:textColor="#D9D9D9"
			android:layout_margin="5dp"
			android:layout_weight=".16"
			android:text="5"/>

		<Button
			android:id="@+id/paketbasixmliButtonPaket6"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#E100FF"
			android:textColor="#D9D9D9"
			android:layout_margin="5dp"
			android:layout_weight=".16"
			android:text="6"/>

	</LinearLayout>

</LinearLayout>

